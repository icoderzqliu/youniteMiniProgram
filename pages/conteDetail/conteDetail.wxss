/**conteDetail.wxss**/
#footer{
  position: fixed;
  bottom: -1rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  width:100%;
  box-shadow: -4px -2px 10px rgb(0, 0, 0,0.2);
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 50rpx;
  padding-left: 20rpx;
  padding-right:15rpx;
}

.mainContent{
  position: relative;
  width:100%;
}
#footer>.fav{
font-size: 32rpx;
margin-left: 50rpx;
}
#applyBtn{
background: linear-gradient(to right,#6D6AEF,#3C7EFF);
color: white;
border-radius: 15rpx;
font-weight: 300;
width: 290rpx !important;
align-self: flex-end !important;
margin-right: 40rpx;
height:75rpx;
}
.homeNavi>.cu-custom{
  background-color: rgb(109, 106, 239);
  color:white;
}
.title{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin:25rpx 35rpx 20rpx 35rpx;
  
}
.title>.conteName{
  font-size: 35rpx;
  font-weight: bolder;
  flex:8;
}
.title>.conteMemo{
  font-size: 30rpx;
  font-weight: bold;
  color: #6D6AEF;
  flex:3;
  margin-left: 15rpx;
}
.divider{
  height:2rpx;
  width:90%;
  margin:5rpx auto 5rpx auto;
  background-color: #C9C9C9;
}
.conteSnack{
  margin:20rpx 48rpx 20rpx 48rpx;
  display:flex;
  flex-direction: row;
  align-items: center;
}

.labelBox{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow-x: scroll;
  flex:7;
  margin-right: 35rpx;
  padding-left: 3rpx;
  padding-right: 3rpx;
}
.labelFilter{
  position: relative;
  padding:8rpx 20rpx 12rpx 20rpx;
  text-align: center;
  background-color: rgb(238, 238, 238);
  color: gray;
  font-size: 12px;
  width:auto;
  border-radius: 6rpx;
  margin-right: 20rpx;
  white-space: nowrap;
  box-shadow: rgba(0, 0, 0, 0.2) 0rpx 3rpx 6rpx;
  margin-bottom: 3rpx;
}
.remainText{
flex:3;
color:gray;
position: relative;
margin-bottom: 3rpx;
}
.remainText::after{
  content: "";
  height:110%;
  width:7rpx;
  background-color: rgb(60, 126, 255);
  position: absolute;
  left:-9rpx;
}
.captanCard{
  padding: 20px 10rpx 35rpx 12rpx;
  width:auto;
  margin:15rpx 35rpx 0rpx 35rpx;
  box-shadow: 1pt 1pt 2pt rgb(0, 0, 0,0.2);
  border-radius: 3.33pt;
  display: flex;
  position: relative;
  flex-direction: row;
  justify-items: start;
  align-items: center;
}
.captanCard>.info{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.captanCard>.info>.name{
  font-size: 35rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.captanCard>.info>.name>text{
  font-size: 39rpx;
  font-weight: 400;
}
.captanCard>.info>.name>.nameLable{
  display: inline-block;
  font-size: 23rpx;
  background-color: rgb(169, 168, 236);
  border-radius: 15rpx;
  padding:1px 15rpx 1rpx 15rpx;
  text-align: center;
  color:white;
  margin-left: 15rpx;
  font-weight: 200;
}
.captanCard>.action{
  flex:1;
  text-align: right;
margin-right:15rpx;
font-weight: bold;
}
.avatar{
  padding-top:5rpx;
}
.mainContent>.time{
  position: relative;
  margin:20rpx auto 0rpx 40rpx;
}

.mainContent>.time>.timeBegin,.mainContent>.time>.timeEnd{
  font-weight: bold;
  margin-bottom: 10rpx;
}
.mainContent>.time>.remain{
  position: absolute;
  width: 170rpx;
  padding-left: 15rpx;
  padding-top: 8rpx;
  padding-bottom: 15rpx;
  color:white;
  background-color: rgb(169, 168, 236);
  right:-2rpx;
  top:15rpx;
  display: flex;
  flex-direction: column;
  box-shadow: -4rpx 5rpx 10rpx rgb(169, 168, 236,0.7);
  border-bottom-left-radius: 15rpx;
  border-top-left-radius: 15rpx;
}
.mainContent>.time>.remain>.remaintext{
  align-self: flex-start;
}
.mainContent>.time>.remain>.remainDate{
  align-self: center;
  font-size: 30rpx;
}
.titleBanner{
  font-size: 35rpx;
  font-weight: bolder;
  margin:15rpx auto 10rpx 45rpx;
  display: block;
  width: 100%;
  position: relative;
}
.titleBanner::before{
  content: '';
  height:105%;
  display: block;
  background-color: rgb(60, 126, 255);
  width:8rpx;
  position: absolute;
  top:0rpx;
  left:-13rpx;
}